<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Results"
     >
    
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/big_card"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/duration_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Duration: 0 s"
            android:textSize="20sp" />

		<TextView
		    android:id="@+id/rep_count_results"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:padding="20dp"
		    android:text="# Reps: 0"
		    android:textSize="20sp" />

    </LinearLayout>
    
  
	
    <TextView
        android:id="@+id/cadence_plot_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/container"
        android:layout_alignParentLeft="true"
        android:paddingTop="20dp"
        android:text="Cadence Plot"
        android:textSize="20sp" />

	<LinearLayout android:id="@+id/cadence_plot_chart" 
        android:orientation="horizontal" 
        android:layout_width="fill_parent" 
        android:layout_height="150dp"
        android:layout_below="@id/cadence_plot_results" />
   
	<TextView
        android:id="@+id/intensity_plot_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cadence_plot_chart"
        android:layout_alignParentLeft="true"
        android:paddingTop="20dp"
        android:text="Intensity plot"
        android:textSize="20sp" />
	
	<LinearLayout android:id="@+id/intensity_plot_chart" 
        android:orientation="horizontal" 
        android:layout_width="fill_parent" 
        android:layout_height="150dp"
        android:layout_below="@id/intensity_plot_results" />

	

</RelativeLayout>
